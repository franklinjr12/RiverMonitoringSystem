<h2>User Sessions</h2>

<%= link_to "New User Session", new_admin_user_session_path, class: "new-btn" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Session Token</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @user_sessions.each do |user_session| %>
      <tr>
        <td><%= user_session.id %></td>
        <td><%= user_session.user.email %></td>
        <td><%= user_session.session_token %></td>
        <td><%= user_session.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td class="actions">
          <%= link_to "Edit", edit_admin_user_session_path(user_session) %> |
          <%= link_to "Delete", admin_user_session_path(user_session), method: :delete, 
              data: { confirm: "Are you sure?" }, class: "destroy" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Back to Dashboard", admin_path %></p>

