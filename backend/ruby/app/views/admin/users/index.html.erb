<h2>Users</h2>

<%= link_to "New User", new_admin_user_path, class: "new-btn" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td class="actions">
          <%= link_to "Edit", edit_admin_user_path(user) %> |
          <%= link_to "Delete", admin_user_path(user), method: :delete, 
              data: { confirm: "Are you sure?" }, class: "destroy" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Back to Dashboard", admin_admin_path %></p>

