<h2>Edit User</h2>

<%= form_with model: [:admin, @user], local: true do |form| %>
  <% if @user.errors.any? %>
    <div style="color: #dc3545; margin-bottom: 20px;">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
    <% if @user.errors[:email].any? %>
      <div class="error"><%= @user.errors[:email].first %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :password, "New Password (leave blank to keep current)" %>
    <%= form.password_field :password %>
    <% if @user.errors[:password].any? %>
      <div class="error"><%= @user.errors[:password].first %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "Password Confirmation" %>
    <%= form.password_field :password_confirmation %>
    <% if @user.errors[:password_confirmation].any? %>
      <div class="error"><%= @user.errors[:password_confirmation].first %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Update User" %>
    <%= link_to "Cancel", admin_users_path, class: "cancel" %>
  </div>
<% end %>

<p><%= link_to "Back to Users", admin_users_path %></p>

